<?xml version="1.0" encoding="UTF-8"?>
<b:beans xmlns:mvc="http://www.springframework.org/schema/mvc"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns:b="http://www.springframework.org/schema/beans"
		xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd
							http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<!-- Enables the Spring MVC @Controller programming model -->
	<mvc:annotation-driven/>
	
	<!-- run at init -->
	<!-- <b:bean name="starter" init-method="initMapper" class="${package}.InitMapper" lazy-init="false"/> -->
	
	<b:bean class="org.springframework.web.servlet.view.UrlBasedViewResolver" id="tilesViewResolver">
		<b:property name="viewClass" value="org.springframework.web.servlet.view.tiles3.TilesView"/>
	</b:bean>
	
	<b:bean class="org.springframework.web.servlet.view.tiles3.TilesConfigurer" id="tilesConfigurer">
		<b:property name="definitions">
			<b:list>
				<b:value>/WEB-INF/tiles.xml</b:value>
				<b:value>/WEB-INF/views/**/views.xml</b:value>
			</b:list>
		</b:property>
	</b:bean>
	<!-- Imports user-defined @Controller beans that process client requests -->
	<b:import resource="controller.xml"/>
	
	<b:bean name="encodingFilter" class="org.springframework.web.filter.CharacterEncodingFilter">
		<b:property name="encoding" value="UTF-8"/>
	</b:bean>
	
